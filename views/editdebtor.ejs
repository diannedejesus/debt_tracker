<%- include('header.ejs') %>

    <main class="d-flex justify-content-center container-fluid flex-fill">
        <section class="w-75 d-grid gap-3">
            <h1>Edit Debt</h1>
            <form class="row g-3" action="/editdebt" method="POST">
                <div class="col-8">
                    <label class="form-label">Name:</label>
                    <input type="text" class="form-control" name="name" value="<%= debtInfo.name %>">
                </div>
                <div class="col">
                    <label class="form-label">File ID:</label>
                    <input type="text" class="form-control" name="fileid" value="<%= debtInfo.fileid %>">
                </div>
                <div class="col-8">
                    <label class="form-label">Total Debt:</label>
                    <input type="number" class="form-control" name="debtamount" value="<%= debtInfo.debtamount %>">
                </div>
                <div class="col">
                    <label class="form-label">Payment:</label>
                    <input type="number" class="form-control" name="minpayment" value="<%= debtInfo.minpayment %>">
                </div>
                <div class="col-12">
                    <label class="form-label">Start Date:</label>
                    <input type="date" class="form-control" name="startdate" value="<%= new Date(debtInfo.startdate).toJSON().slice(0,10) %>">
                </div>
                <input type="hidden" name="id" value="<%= debtInfo.fileid %>">
                <div class="col-12">
                    <input type="submit" class="btn btn-primary">
                </div>
            </form>
        </section>
    </main>

<%- include('footer.ejs') %>