<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Application Template</title>
    <link rel="stylesheet" href="../css/normalize.css">
    <link rel="stylesheet" href="../css/style.css">
</head>
<body>
    <header>
        <section><h1>&#128507; &#9889;</h1></section>
        <nav>
             <ul>
                 <li><a href="/dashboard">Dashboard</a></li>
             </ul>
         </nav>
         <section>
            <% if (typeof user !== 'undefined'){ %> 
                <% if (user.admin){ %> 
                    <%= user.email %> (Administrator)
                <% }else{ %>
                    <%= user.email %>
                <% } %>
                <a href="/auth/logout">Logout</a>
            <% }else{ %>
                <a href="/auth/login">Login</a>
            <% } %>
           </section>
     </header>

    <% if (typeof messages !== 'undefined'){ %> 
        <% messages.forEach( (error)=> { %>
            <p class='message'><%= error %></p>
        <% }) %>
    <% } %>
    
    <main class='signin clearfix'>
        <seccion>
            <h2>User Accounts</h2>
            <table>
                <tr>
                    <th>User</th>
                    <th>Registered</th>
                    <th>Revoked</th>
                </tr>
                <% if (typeof userList !== 'undefined'){ %> 
                    <% userList.forEach( (user)=> { %>
                <tr>
                    <td><%= user.email %></td>
                    <td><%= user.registered ? "Yes" : "No" %></td>
                    <td><%= user.revoked ? "Yes" : "No"  %></td>
                </tr>
                    <% }) %>
                <% } %>
            </table>
        </seccion>
        <section>
            <h2>Create User Account</h2>
            <p>To create an user account you need to fill out the form below, then complete the verification process.</p>
            <form class="login-form" action="/auth/user" method="POST">
                <input type="text" name='email' placeholder="email">
                <input type="password" name='password' placeholder="password">
                <input type="password" name='confirmPassword' placeholder="password">
                <input type="submit" value='Submit'>
            </form>
        </section>
    </main>
</body>
</html>