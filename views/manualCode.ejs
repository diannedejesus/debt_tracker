<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Application Template</title>
    <link rel="stylesheet" href="../css/normalize.css">
    <link rel="stylesheet" href="../css/style.css">
</head>
<body>
    <header>
       <section><h1>&#128507; &#9889;</h1></section>
       <nav>
            <ul>
                <li><a href="/asyncFunc">Async Function</a></li>
                <li><a href="/func">Function</a></li>
            </ul>
        </nav>
        <section>
            <% if (typeof user !== 'undefined'){ %> 
                <% if (user.admin){ %> 
                    <%= user.email %> (Administrator) 
                <% }else{ %>
                    <%= user.email %>
                <% } %>
                <a href="/auth/logout">Logout</a>
            <% }else{ %>
                <a href="/auth/login">Login</a>
            <% } %>
           </section>
    </header>
    
    <% if (typeof messages !== 'undefined'){ %>
        <% messages.forEach( (error)=> { %>
            <p class='message'><%= error %></p>
        <% }) %>
    <% } %>
    
    <main class='signin clearfix'>
        <% if(typeof codeInfo !== 'undefined'){ %> 
            <h1>Account Verification Code</h1>
            <p>Send the following code and link to the user: <%= codeInfo.email %></p>
            <p>Code: <%= codeInfo.code %></p>
            <p>Link: <a href="/auth/verifyAccount">thispage.com/auth/verifyAccount</a></p>
        <% }else{ %> 
            
        <% } %>
    </main>

<%- include('footer.ejs') %>