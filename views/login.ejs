<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Application Template</title>
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<body>
    <header class="clearfix">
        <section class="logo"><span>&#128507;</span><span class="under">&#9889;</span></section>
       <nav>
            <!-- <ul>
                <li><a href="/auth/admin">Admin Creation</a></li>
            </ul> -->
        </nav>
        <section class="account">
            <!-- <a href="/">Authenticate</a> -->
        </section>
    </header>
    
    <% if (typeof messages !== 'undefined'){ %>
        <% messages.forEach( (error)=> { %>
            <p class='message'><%= error %></p>
        <% }) %>
    <% } %>
    
    <main class="d-flex justify-content-center">
        <section class="w-50 d-grid gap-3">
            <h1>Login</h1>
            <form class="row g-3" action="/auth/login" method="POST">
                <input type="text" class="form-control" name='email' placeholder="email">
                <input type="password" class="form-control" name='password' placeholder="password">
                <input type="submit" class="btn btn-primary">
                <!-- <a href="auth/forgot/">Forgot Password</a> -->
            </form>
        </section>
    </main>

<%- include('footer.ejs') %>