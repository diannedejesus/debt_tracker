<%- include('header.ejs') %>

<% let currencyFormat = new Intl.NumberFormat("en-US", { style: "currency", "currency":"USD" }) %>

    <main class="justify-content-center d-grid gap-3">
        <h1>Case Review</h1>

        <% if (typeof debtorInfo !== 'undefined'){ %>
            
        <table class="table">
            <thead>
                <tr>
                    <th colspan="4" class="p-0">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                              <a class="nav-link active" aria-current="page" href="/cases/<%= debtorInfo.fileId %>">Table View</a>
                            </li>
                            <li class="nav-item">
                              <a class="nav-link" href="/cases-merge/<%= debtorInfo.fileId %>">Merge View</a>
                            </li>
                            <li class="nav-item">
                              <a class="nav-link" href="/printview/<%= debtorInfo.fileId %>">Print View</a>
                            </li>
                        </ul>
                    </th>
                    <th style="text-align:right;">
                        <form action="/editDebtor/<%= debtorInfo.fileId %>" method="GET">
                            <input type="submit" value="edit" class="btn btn-secondary btn-outline-light btn-sm">
                        </form>
                    </th> 
                </tr>
            </thead>
            <tbody class="table-group-divider">
                <tr class="table-light">
                    <th>Name</th>
                    <th>File Id</th>
                    <th>Started</th>
                    <th>Payment</th>
                    <th>Debt</th>
                </tr>
                <tr>
                    
                    <td><select onchange="changeDebtor(event)">
                        <option selected value="debtorInfo.fileId"><%= debtorInfo.name %></option>
                        <% if (typeof debtorList !== 'undefined'){ %>
                            <% for(let debtor of debtorList){ %>
                                <% if (debtorInfo.name !== debtor.name){ %>
                        <option value="<%= debtor.fileId %>"><%= debtor.name %></option>
                                <% } %>
                            <% } %>
                        <% } %>
                    </select></td>
                    <td><%= debtorInfo.fileId %></td>
                    <% let formatDate = new Date(debtorInfo.startDate) %>
                    <!-- <%= formatDate = formatDate.toLocaleDateString('en-US', {year: 'numeric', month: 'long', day: 'numeric' }) %> -->
                    <td><%= formatDate %></td>
                    <td><%= currencyFormat.format(debtorInfo.minPayment) %></td>
                    <td><%= currencyFormat.format(debtorInfo.debt) %></td>
                </tr>
                <tr class="table-light">
                    <th>Current Debt</th>
                    <th>End Date</th>
                    <th>Payments Left</th>
                    <th>Payment Made</th>
                    <th>Payments Late</th>
                </tr>
                <tr>
                    <td><%= currencyFormat.format(debtorInfo.debt - debtorInfo.totalPaid) %></td>
                    <% let currentDate = new Date() %>
                    <!-- <%= currentDate.setMonth(currentDate.getMonth()+(Math.trunc((debtorInfo.debt - debtorInfo.totalPaid) / debtorInfo.minPayment) + 1)) %> -->
                    <!-- <%= currentDate = currentDate.toLocaleDateString('en-US', {year: 'numeric', month: 'long', day: 'numeric' }) %> -->
                    <td><%= currentDate %></td>
                    <td><%= Math.ceil((debtorInfo.debt - debtorInfo.totalPaid) / debtorInfo.minPayment) %></td>
                    <td><%= debtorInfo.payments.length %></td>
                    <td><%= (debtorInfo.totalPaid < (debtorInfo.elapsed * debtorInfo.minPayment)) ? 'Yes' : 'No' %></td>
                </tr>
        <tr colspan="5"><td colspan="5">
            <table class="table table-striped">
                <thead>
                    <tr class="table-dark">
                        <th colspan="1">Payment Date</th>
                        <th colspan="1">Payment</th>
                        <th colspan="1">Comments</th>
                        <th colspan="1">Balance</th>
                        <th colspan="1">Actions</th>
                    </tr>
                </thead>
                <tbody>

    <!-- Payments -->
                <% let billedCounter = 0 %>
                <% let paymentCounter = 0 %>
                <% let runningBalance = 0 %>

                <% while(billedCounter < debtorInfo.billed.length || paymentCounter < debtorInfo.payments.length){ %>
                    <% if(paymentCounter < debtorInfo.payments.length && runningBalance <= 0){ %>
                    <tr class="">
                        <% let formatDate = new Date(debtorInfo.payments[paymentCounter].paymentDate) %>
                        <!-- <%= formatDate = formatDate.toLocaleDateString('en-US', {year: 'numeric', month: 'long', day: 'numeric' }) %> -->
                        <td rowspan="1" colspan="1"><%= formatDate %></td>
                        <td rowspan="1"><%= currencyFormat.format(debtorInfo.payments[paymentCounter].paymentAmount) %></td>
                        <% runningBalance += debtorInfo.payments[paymentCounter].paymentAmount %>
                        <td rowspan="1"><%= debtorInfo.payments[paymentCounter].paymentComment %></td>
                        <td><%= currencyFormat.format(runningBalance) %></td>
                        <td>
                            <form class="button" action="/delPayment/<%= debtorInfo.payments[paymentCounter].id %>" method="POST">
                                <input type="submit" value="X" class="btn btn-secondary btn-outline-light btn-sm">
                            </form>
                            <form class="button" action="/editPayment/<%= debtorInfo.fileId %>/<%= debtorInfo.payments[paymentCounter].id %>" method="GET">
                                <input type="submit" value="Edit" class="btn btn-secondary btn-outline-light btn-sm">
                            </form>
                        </td>
                        <% paymentCounter++ %>
                    </tr>
                    <% }else if(billedCounter >= debtorInfo.billed.length && paymentCounter < debtorInfo.payments.length){ %>
                        <tr class="highlight">
                            <% let formatDate = new Date(debtorInfo.payments[paymentCounter].paymentDate) %>
                            <!-- <%= formatDate = formatDate.toLocaleDateString('en-US', {year: 'numeric', month: 'long', day: 'numeric' }) %> -->
                            <td rowspan="1" colspan="1"><%= formatDate %></td>
                            <td rowspan="1"><%= currencyFormat.format(debtorInfo.payments[paymentCounter].paymentAmount) %></td>
                            <% runningBalance += debtorInfo.payments[paymentCounter].paymentAmount %>
                            <td rowspan="1"><%= debtorInfo.payments[paymentCounter].paymentComment %></td>
                            <td><%= currencyFormat.format(runningBalance) %></td>
                            <td>
                                <form class="button" action="/delPayment/<%= debtorInfo.payments[paymentCounter].id %>" method="POST">
                                    <input type="submit" value="X" class="deleteBtn"> 
                                </form>
                                <form class="button" action="/editPayment/<%= debtorInfo.fileId %>/<%= debtorInfo.payments[paymentCounter].id %>" method="GET">
                                    <input type="submit" value="edit" class="editBtn">
                                </form>
                            </td>
                            <% paymentCounter++ %>
                        </tr>
                    <% } %>
                    <% if(billedCounter < debtorInfo.billed.length && runningBalance > 0){ %>
                        <tr>
                            <% let formatDate = new Date(debtorInfo.billed[billedCounter].paymentDate) %>
                            <!-- <%= formatDate = formatDate.toLocaleDateString('en-US', {year: 'numeric', month: 'long', day: 'numeric' }) %> -->
                            <td rowspan="1" colspan="1"><%= formatDate %></td>
                            <td rowspan="1">-<%= currencyFormat.format(debtorInfo.billed[billedCounter].paymentAmount) %></td>
                            <% runningBalance -= debtorInfo.billed[billedCounter].paymentAmount %>
                            <td rowspan="1"><%= debtorInfo.billed[billedCounter].paymentComment %></td>
                            <td><%= currencyFormat.format(runningBalance) %></td>
                            <td></td>
                            <% billedCounter++ %>
                        </tr>
                    <% }else if(billedCounter < debtorInfo.billed.length && paymentCounter >= debtorInfo.payments.length){ %>
                        <tr>
                            <% let formatDate = new Date(debtorInfo.billed[billedCounter].paymentDate) %>
                            <!-- <%= formatDate = formatDate.toLocaleDateString('en-US', {year: 'numeric', month: 'long', day: 'numeric' }) %> -->
                            <td rowspan="1"><%= formatDate %></td>
                            <td rowspan="1">-<%= currencyFormat.format(debtorInfo.billed[billedCounter].paymentAmount) %></td>
                            <% runningBalance -= +debtorInfo.billed[billedCounter].paymentAmount %>
                            <td rowspan="1"><%= debtorInfo.billed[billedCounter].paymentComment %></td>
                            <td><%= currencyFormat.format(runningBalance) %></td>
                            <td></td>
                            <% billedCounter++ %>
                        </tr>
                    <% } %>
                <% } %>      
            <% } %>   
                </tbody>
            </table>
        </td></tr>
            </tbody>
        </table>
    </main>

<%- include('footer.ejs') %>