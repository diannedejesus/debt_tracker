<%- include('header.ejs') %>

    <main class='signin clearfix'>
        <h1>Case Review</h1>


        <table>
            <thead><th colspan="4">Tester Table</th></thead>
            <tbody>
                <tr>
                    <td rowspan="2">Row 1</td>
                    <td>Row 1</td>
                    <td>Row 1</td>
                    <td></td>
                </tr>
                <tr>
                    <td rowspan="2">Row 2</td>
                    <td rowspan="2">Row 2</td>
                    <td></td>
                </tr>
                <tr>
                    <td rowspan="2">Row 3</td>
                    <td></td>
                </tr>
                <tr>
                    <td rowspan="2">Row 4</td>
                    <td>Row 4</td>
                    <td></td>
                    <!-- <td></td> -->
                </tr>
                <tr>

                    <td>Row 5</td>
                    <td></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
        <% if (typeof debtorInfo !== 'undefined'){ %>
        
        <table>
            <thead>
                <tr>
                    <td colspan="4"></td>
                    <td colspan="1"><a href="/printview/<%= debtorInfo.fileId %>">Print View</a></td>
                </tr>
                <tr>
                    <th colspan="5">Debtor table</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>Name</th>
                    <th>File Id</th>
                    <th>Started</th>
                    <th>Payment</th>
                    <th>Debt</th>
                </tr>
                <tr>
                    
                    <td><select onchange="changeDebtor(event)">
                        <option selected value="debtorInfo.fileId"><%= debtorInfo.name %></option>
                        <% if (typeof debtorsList !== 'undefined'){ %>
                            <% for(let debtor of debtorsList){ %>
                                <% if (debtorInfo.name !== debtor.name){ %>
                        <option value="<%= debtor.fileId %>"><%= debtor.name %></option>
                                <% } %>
                            <% } %>
                        <% } %>
                    </select></td>
                    <td><%= debtorInfo.fileId %></td>
                    <% let formatDate = new Date(debtorInfo.startDate) %>
                    <!-- <%= formatDate = formatDate.toLocaleDateString('en-US', {year: 'numeric', month: 'long', day: 'numeric' }) %> -->
                    <td><%= formatDate %></td>
                    <td><%= debtorInfo.minPayment %></td>
                    <td><%= debtorInfo.debt %></td>
                    <% } %>
                </tr>
                <tr>
                    <th>Current Debt</th>
                    <th>End Date</th>
                    <th>Payments Left</th>
                    <th>Payment Made</th>
                    <th>Payments Late</th>
                </tr>
                <tr>
                    <% if (typeof debtorInfo !== 'undefined'){ %>
                    <td><%= debtorInfo.debt - debtorInfo.totalPaid %></td>
                    <% let currentDate = new Date() %>
                    <!-- <%= currentDate.setMonth(currentDate.getMonth()+(Math.trunc((debtorInfo.debt - debtorInfo.totalPaid) / debtorInfo.minPayment) + 1)) %> -->
                    <!-- <%= currentDate = currentDate.toLocaleDateString('en-US', {year: 'numeric', month: 'long', day: 'numeric' }) %> -->
                    <td><%= currentDate %></td>
                    <td><%= Math.trunc((debtorInfo.debt - debtorInfo.totalPaid) / debtorInfo.minPayment) + 1 %></td>
                    <td><%= debtorInfo.payments.length %></td>
                    <td><%= (debtorInfo.totalPaid < (debtorInfo.elapsed * debtorInfo.minPayment)) ? 'Yes' : 'No' %></td>
                    <% } %>
                </tr>
                <tr>
                    <th colspan="1">Payment Date</th>
                    <th colspan="1">Payment</th>
                    <th colspan="3">Comments</th>
                </tr>
                <tr>
                    <th colspan="5">
                        <a href="#">Button</a>
                        <a href="#">Button</a>
                    </th>
                </tr>

                <% if (typeof debtorInfo.billed !== 'undefined'){ %>
                    <% let cells = 0 %>
                    <% let payments = 0 %>
                    <% let covered = 0 %>
                    <% let remaining = 0 %>
                    <% let skips = 0 %>
                    <% let addLine = 0 %>
                    <% for(let i=0; i<debtorInfo.billed.length; i++){ %>
                <tr>
                        <% if(i === skips && cells < debtorInfo.payments.length){ %>   
                            <% if(debtorInfo.payments[cells].paymentAmount % debtorInfo.minPayment > 0 && addLine === 0) {addLine = Math.floor(debtorInfo.payments[cells].paymentAmount / debtorInfo.minPayment) + i}  %>       
                            <% payments = Math.floor(debtorInfo.payments[cells].paymentAmount / debtorInfo.minPayment) %>
                            <% covered = payments * debtorInfo.minPayment %>
                            <% remaining = debtorInfo.payments[cells].paymentAmount - covered %>
                    <td rowspan="<%= Math.ceil(debtorInfo.payments[cells].paymentAmount / debtorInfo.minPayment) %>"><%= debtorInfo.payments[cells].paymentAmount %></td>
                            <% skips = i + Math.ceil(debtorInfo.payments[cells].paymentAmount / debtorInfo.minPayment) %>
                            <% cells++ %>
                        <% } %>
                        <% let formatDate = new Date(debtorInfo.billed[i].paymentDate) %>
                    <!-- <%= formatDate = formatDate.toLocaleDateString('en-US', {year: 'numeric', month: 'long', day: 'numeric' }) %> -->
                    <td rowspan="<%= i === addLine ? 2 : 1 %>" colspan="1"><%= formatDate %></td>
                    <td rowspan="<%= i === addLine ? 2 : 1 %>" colspan="1"><%= debtorInfo.billed[i].paymentAmount %></td>
                    <td></td>
                    <td></td>
                </tr>
                        <% if(i === addLine ){ %>
                <tr><td></td><td></td></tr>
                            <% if(cells < debtorInfo.payments.length) addLine = Math.floor(debtorInfo.payments[cells].paymentAmount / debtorInfo.minPayment) + i %>
                        <% } %>
                        
                    <% } %>
                <% } %>
            </tbody>
        </table>
    </main>
    <script type="text/javascript" src="../js/main.js"></script>
</body>
</html>