<%- include('header.ejs') %>

    <main class='signin clearfix'>
            <h1>Current Debts Owed</h1>

            <table>
                <thead>
                    <tr>
                        <th colspan="5">Debtor table</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>Name</th>
                        <th>Current Debt</th>
                        <th>Payments Left</th>
                        <th>Late</th>
                    </tr>
                    <% if (typeof debtors !== 'undefined'){ %>
                        <% for(let debts of debtors){ %>
                    <tr>
                        <td><a href="cases/<%= debts.fileId %>"><%= debts.name %></a></td>
                        <td><%= debts.currentDebt %></td>
                        <td><%= Math.ceil(debts.currentDebt / debts.minPayment) %></td>
                        <td><%= debts.paymentLate ? 'Yes' : 'No' %></td>
                    </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
    </main>
</body>
</html>